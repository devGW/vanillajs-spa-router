{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "public",
    "types": ["node", "jest", "@testing-library/jest-dom"],
    "lib": ["DOM", "ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ESNext"],
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "static"]
}
